@using (Html.BeginForm())
{
    @*@Html.AntiForgeryToken()*@

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @*@Html.LabelFor(model => model.PostagemId, "PostagemId", htmlAttributes: new { @class = "control-label col-md-2" })*@
            <label class="control-label col-md-2">Tópico</label>
            <div class="col-md-10">
                @Html.DropDownList("PostagemId", null, htmlAttributes: new { @class = "form-control",enable="true" })
                @Html.ValidationMessageFor(model => model.PostagemId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Mensagem</label>
            <div class="col-md-10">
                @Html.Raw(ViewBag.Mensagem)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Respostas, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.Mensagem, new { htmlAttributes = new { @class = "form-control" } })*@
                <textarea id="Resposta" name="Respostas"><p>Sua Resposta</p></textarea>
                @Html.ValidationMessageFor(model => model.Respostas, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>

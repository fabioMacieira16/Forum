@model IEnumerable<SuporteSS2015._1.Models.TipoEscala>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Novo", "Create", null , new { @class = "btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TipoEscalas)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TipoEscalas)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id } , new { @class = "btn btn-warning"}) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.Id }, new {@class = "btn btn-danger" })
        </td>
    </tr>
}

</table>

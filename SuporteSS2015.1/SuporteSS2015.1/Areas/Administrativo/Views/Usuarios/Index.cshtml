@model IEnumerable<SuporteSS2015._1.Models.RegisterViewModel>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lista de Usuários</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
</head>
<body>
    <div>
        @if (TempData["mensagem"] != null)
        {
            <div class="alert alert-success">@TempData["mensagem"]</div>
        }
    </div>

    <div class="panel-body">

        @Html.ActionLink("Novo Usuário", "NovoUsuario", "Analistas", new { @class = "btn btn-default" })

        <table class="table table-striped table-condensed table-bordered">
            <thead>
                <tr>
                    <th class="text-right">Id</th>
                    <th>Nome</th>
                    <th class="text-right">Contato</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="row-@item.Id">
                        <td class="text-right">
                           $ @item.Id
                        </td>
                        <td class="text-right"> 
                            @Html.ActionLink(item.NomeAnalista, "Alterar", new { item.Id } )
                        </td>
                        <td>
                            @item.FoneAnalista
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</body>
</html>
